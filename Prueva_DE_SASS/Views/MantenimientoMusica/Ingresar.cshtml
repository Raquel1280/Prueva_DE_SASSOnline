@model Prueva_DE_SASS.Models.ClsPartialMusicas

@{
    ViewBag.Title = "Ingresar";
}
<h2>Ingresar</h2>

@using (Html.BeginForm("Ingresar", "MantenimientoMusica", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Musica </h4>
    <hr />
    <br />
    <div class="contenedoringresar">

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="container contenedorfromulario">

                <div class="ladoizquierdo">

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Artista, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Artista, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Artista, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <hr class="nad" />

                    <div class="form-group">
                        @Html.LabelFor(model => model.Duracion, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Duracion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Duracion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Fecha_Estreno, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Fecha_Estreno, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Fecha_Estreno, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <hr class="nad" />

                    <div class="form-group">
                        @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.imagefile, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            <span class="btn btn-default btn-file">

                                @Html.TextBoxFor(modelo => modelo.imagefile, new { Type = "file" })

                            </span>

                            @Html.ValidationMessageFor(model => model.imagefile, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <hr class="nad" />

                    <div class="form-group">
                        @Html.LabelFor(model => model.Cod_Genero, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.Action("ListarGeneroVideo_Musica", "ListarGeneros")
                            @Html.ValidationMessageFor(model => model.Cod_Genero, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Cod_Idioma, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.Action("listarIdiomaspeliculas", "ListarGeneros")
                            @Html.ValidationMessageFor(model => model.Cod_Idioma, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <hr class="nad" />

                    <div class="form-group guardarEditar">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Crear" class="btn btn-default tuboton" />
                        </div>
                        <div class="yourboton">

                            <a href="/MantenimientoMusica/IndexMusica" class=" btn btn-default  yourboton">Atras</a>
                        </div>

                    </div>




                </div>
            </div>
        </div>
    </div>
}
