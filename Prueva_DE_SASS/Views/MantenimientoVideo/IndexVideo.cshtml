@model IEnumerable<Prueva_DE_SASS.Models.Videos>
<br />
@using (Html.BeginForm("IndexVideo", "MantenimientoVideo", FormMethod.Get))
{
    <div class="contenedorestatico">


        <div class="mibotonbuscar">
            @Html.TextBox("searching")
            <input type="submit" value="Buscar" class="botonbuscar" />
        </div>
        <div class="mibotonbuscar">
            <a class="btn btn-primary " href="/MantenimientoVideo/AgregarVideo">Añadir Video <span class="glyphicon glyphicon-plus"></span></a>
        </div>

    </div>
}
<h4>Videos</h4>
<br />
<table class="table table-striped">

    <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Titulo
            </th>

            <th>
                Artistas
            </th>

            <th>
                Duracion/Min
            </th>

            <th>
                Fecha De Estreno
            </th>
            <th>
                Precio
            </th>
            <th>
                Portada
            </th>
            <th>
                Genero
            </th>
            <th>
                Idioma
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">

                    No se encontro la Mausica que solicito!!!
                </td>

            </tr>

        }
        else
        {

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod_Video)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    @*<td>
                                @Html.DisplayFor(modelItem => item.Actores)

                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Artista)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duracion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_Estreno)
                    </td>



                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>

                    <td>
                        <div class="tamano">
                            @if (!string.IsNullOrEmpty(item.Portada))
                            {
                                <img src="@Url.Content(item.Portada)" alt="imagen" />
                            }
                        </div>
                    </td>
                    <td>
                        @Prueva_DE_SASS.Clase.Class1.generoMusicVideo(item.Cod_Genero)

                    </td>
                    <td>

                        @Prueva_DE_SASS.Clase.Class1.mostraridioma(item.Cod_Idioma)
                    </td>
                    <td>
                        <div class="botonesabajo">

                            <div class="botonesabajo">

                                @Html.ActionLink("Editar", "EditarVideo", new { Cod_Video = item.Cod_Video }, new { @class = "btn btn-success miboton" })
                            </div>
                            <div class="botonesabajo">

                                @Html.ActionLink("Detalles", "DetallesVideo", new { Cod_Video = item.Cod_Video }, new { @class = "btn btn-info " })
                            </div>
                            <div class="botonesabajo">
                                @Html.ActionLink("Eliminar", "EliminarVideo", new { Cod_Video = item.Cod_Video }, new { @class = "btn btn-danger aEliminar" })
                            </div>

                        </div>

                    </td>

                </tr>
            }
        }
    </tbody>
</table>

@section Scripts{

    <script>
        $(".aEliminar").click(function (Event) {
            if (!confirm('Esta seguro de eliminar el registro?')) {

                event.preventDefault();
            }
        });
    </script>
}
